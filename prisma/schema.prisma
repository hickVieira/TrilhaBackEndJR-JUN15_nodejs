// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  tasks    Task[]
  isAdmin  Boolean
}

model Task {
  id          Int      @id @default(autoincrement())
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     Int
  name        String
  description String?
  priority    Int
  points      Int
  startDate   DateTime
  endDate     DateTime
  done        Boolean  @default(false)
}
